<Window x:Class="AkribisFAM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:kl="clr-namespace:AkribisFAM.Lang"
        xmlns:local="clr-namespace:AkribisFAM"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Akribis FAM"
        WindowState="Maximized"
        Height="1000" Width="1600">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Theme/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!--************************************************************************************************************-->
    <!--//Add By YXW 2025-5-16 ************************************************************-->
    <!--************************************************************************************************************-->
    <Grid x:Name="container" Margin="0,10,0,0" >
        <!-- 定义三行 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!-- 第一行，水平 StackPanel -->
        <Grid Grid.Row="0" Background="LightBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- 左侧用户状态信息 -->
                <ColumnDefinition Width="2*"/>
                <!-- 中间按钮 -->
                <ColumnDefinition Width="0.4*"/>
                <!-- 报警按钮 -->
                <ColumnDefinition Width="*"/>
                <!-- 时间显示 -->
            </Grid.ColumnDefinitions>

            <!-- 用户状态标签 -->
            <StackPanel Margin="30 0 30 0" Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                <Label Content="{DynamicResource UserLab}" />
                <Label Name="NowUserLab" />

                <Label Content="{DynamicResource SysStatelab}" />
                <Label Name="NowStateLab" />

                <Label Content="" />
                <Label Name="NowState" />

                <Label Content="{DynamicResource CTlab}" />
                <Label Name="CtValueLab" />

                <Label Content="{DynamicResource UPHlab}" />
                <Label Name="UphValueLab" />
            </StackPanel>

            <!-- 按钮区域 -->
            <StackPanel Margin="150 0 0 0" Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1">
                <Button Name="BtnDevice" Margin="5,0" Content="{DynamicResource DeviceBtn}" Style="{StaticResource MaterialDesignFloatingActionLightButton}" Click="BtnDevice_Click" />
                <Button Name="BtnScanningGun" Margin="5,0" Content="{DynamicResource ScanningGunBtn}" Style="{StaticResource MaterialDesignFloatingActionLightButton}" Click="BtnScanningGun_Click" />
                <Button Name="BtnRangefinder" Margin="5,0" Content="{DynamicResource RangefinderBtn}" Style="{StaticResource MaterialDesignFloatingActionLightButton}" Click="BtnRangefinder_Click" />
                <Button Name="BtnCamera1" Margin="5,0" Content="{DynamicResource Camera1Btn}" Style="{StaticResource MaterialDesignFloatingActionLightButton}" Click="BtnCamera1_Click" />
                <Button Name="BtnCamera2" Margin="5,0" Content="{DynamicResource Camera2Btn}" Style="{StaticResource MaterialDesignFloatingActionLightButton}" Click="BtnCamera2_Click" />
                <Button Name="BtnCamera3" Margin="5,0" Content="{DynamicResource Camera3Btn}" Style="{StaticResource MaterialDesignFloatingActionLightButton}" Click="BtnCamera3_Click" />
            </StackPanel>

            <!-- 报警按钮 -->
            <local:PromptableButton x:Name="button" PromptCount="{Binding promptCount}" CoverImageSource="/Windows/641.png"
                            Click="Alarmbutton_Click" HorizontalAlignment="Left" VerticalAlignment="Center"
                            Height="55" Width="72" Grid.Column="2" />

            <!-- 当前时间 -->
            <Border BorderBrush="Transparent" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="3">
                <TextBlock Name="currentTimeTextBlock" Text="NowTime---"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   TextWrapping="Wrap" FontSize="20" />
            </Border>
        </Grid>

        <!-- 第二行，水平 StackPanel -->
        <Grid Grid.Row="1" Background="LightGreen"
      VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="171*" />
                <ColumnDefinition Width="1429*" />
            </Grid.ColumnDefinitions>

            <!-- 左侧菜单 -->
            <Border Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" VerticalAlignment="Stretch">
                <materialDesign:ColorZone Mode="PrimaryMid" >
                    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">

                        <RadioButton Content="{DynamicResource Main Page}"
                 Style="{StaticResource MaterialDesignTabRadioButton}"
                 GroupName="NavGroup"
                 Height="82"   IsChecked="True"
                 Click="MainWindowButton_Click"/>

                        <RadioButton Content="{DynamicResource Manual Control}"
                 Style="{StaticResource MaterialDesignTabRadioButton}"
                 GroupName="NavGroup"
                 Height="77"   IsChecked="False"
                 Click="ManualControlButton_Click"/>

                        <RadioButton Content="{DynamicResource Parameter Setting}"
                 Style="{StaticResource MaterialDesignTabRadioButton}"
                 GroupName="NavGroup"
                 Height="76"  IsChecked="False"
                 Click="ParameterConfigButton_Click"/>

                        <RadioButton Content="{DynamicResource Performance}"
                 Style="{StaticResource MaterialDesignTabRadioButton}"
                 GroupName="NavGroup"
                 Height="75"   IsChecked="False" 
                 Click="PerformanceButton_Click"
                 />

                        <RadioButton Content="{DynamicResource Parameter Setting}"
                 Style="{StaticResource MaterialDesignTabRadioButton}"
                 GroupName="NavGroup"
                 Height="76"  IsChecked="False"
                 Click="InternetConfigButton_Click"/>

                        <RadioButton Content="{DynamicResource Log}"
                 Style="{StaticResource MaterialDesignTabRadioButton}"
                 GroupName="NavGroup"
                 Height="75"   IsChecked="False"
                 Click="DebugLogButton_Click"/>
                    </StackPanel>
                </materialDesign:ColorZone>
            </Border>

            <!-- 右侧内容 -->
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ContentControl Name="ContentDisplay" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
            </Border>
        </Grid>

        <!-- 第三行，水平 StackPanel -->
        <Grid Grid.Row="2" Background="LightSalmon">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 按钮组放在右边 -->
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <Button x:Name="StartAutoRunButton" Style="{StaticResource MaterialDesignRaisedLightButton}" Content="Start" Height="64" Width="96" FontWeight="Bold" Margin="0,0,10,0" Click="StartAutoRun_Click" />
                <Button x:Name="StopAutoRunButton" Style="{StaticResource MaterialDesignRaisedLightButton}" Content="Stop" Height="64" Width="96" FontWeight="Bold" Margin="0,0,10,0" Click="StopAutoRun_Click"/>
                <Button x:Name="PauseAutoRunButton" Style="{StaticResource MaterialDesignRaisedLightButton}" Content="Pause" Height="64" Width="96" FontWeight="Bold" Margin="0,0,10,0" Click="PauseAutoRun_Click"/>
                <Button x:Name="ResetButton" Style="{StaticResource MaterialDesignRaisedLightButton}" Content="Reset" Height="64" Width="96" FontWeight="Bold" Margin="0,0,10,0" PreviewMouseLeftButtonDown="ResetButton_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="ResetButton_PreviewMouseLeftButtonUp"/>
                <Button x:Name="IdleButton" Style="{StaticResource MaterialDesignRaisedLightButton}" Content="Idle" Width="96" Height="64" FontWeight="Bold" Margin="0,0,10,0" Click="IdleButton_Click"/>
                <Button x:Name="MaintenanceButton" Style="{StaticResource MaterialDesignRaisedLightButton}" Content="Maint." Width="96"  Height="64" FontWeight="Bold" Margin="0,0,10,0" Click="MaintenanceButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>