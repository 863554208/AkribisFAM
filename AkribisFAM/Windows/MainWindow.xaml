<Window x:Class="AkribisFAM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:kl="clr-namespace:AkribisFAM.Lang"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Grid Margin="0,10,0,0">
        <Border BorderBrush="Black" BorderThickness="0" Margin="202,2,589,692" >
            <Label Content="当前用户:" FontSize="24" VerticalAlignment="Center" Margin="10,0,54,0" Height="38"/>
        </Border>
        <Border BorderBrush="Transparent" BorderThickness="1" HorizontalAlignment="Left" Height="111" VerticalAlignment="Top" Width="207">
            <Image HorizontalAlignment="Left" Height="135" VerticalAlignment="Center" Width="204" Margin="-1,0,0,0" Source="D:\AkribisLogo.png "/>
        </Border>
        <Border BorderBrush="Transparent" BorderThickness="1" HorizontalAlignment="Left" Height="55" Margin="212,60,0,0" VerticalAlignment="Top" Width="408">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-1,0,0,0" Width="593">
                <!-- First Label -->
                <Label Content="设备状态" FontSize="15" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBox TextWrapping="Wrap" Text="Running"  BorderThickness="0" VerticalAlignment="Center" Width="60"/>

                <Label Content="CT" FontSize="15" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBox TextWrapping="Wrap" Text="36" VerticalAlignment="Center" Width="60" BorderThickness="0" />

                <Label Content="UPH" FontSize="15" VerticalAlignment="Center" Width="67" FontWeight="Bold" />
                <TextBox TextWrapping="Wrap" Text="120" VerticalAlignment="Center" Width="60 " BorderThickness="0"/>
                <TextBlock />
            </StackPanel>
        </Border>
        <Border BorderBrush="Transparent" BorderThickness="1" HorizontalAlignment="Left" Height="55" Margin="435,0,0,0" VerticalAlignment="Top" Width="355">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35">
                <!-- Button 1 -->
                <Button x:Name="AGMConnectionLabel" Content="AGM" Width="50" Height="50" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" 
                Background="Gray" Foreground="White" FontSize="12" BorderBrush="Black" BorderThickness="2"/>
                <!-- Button 2 -->
                <Button Content="扫码枪" Width="50" Height="50" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" 
                Background="Gray" Foreground="White" FontSize="12" BorderBrush="Black" BorderThickness="2"/>
                <!-- Button 3 -->
                <Button Content="测距仪" Width="50" Height="50" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" 
                Background="Gray" Foreground="White" FontSize="12" BorderBrush="Black" BorderThickness="2"/>
                <!-- Button 4 -->
                <Button Content="相机1" Width="50" Height="50" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" 
                Background="Gray" Foreground="White" FontSize="12" BorderBrush="Black" BorderThickness="2"/>
                <!-- Button 5 -->
                <Button Content="相机2" Width="50" Height="50" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" 
                Background="Gray" Foreground="White" FontSize="12" BorderBrush="Black" BorderThickness="2"/>
                <!-- Button 6 -->
                <Button Content="相机3" Width="50" Height="50" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" 
                Background="Gray" Foreground="White" FontSize="12" BorderBrush="Black" BorderThickness="2"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="Transparent" BorderThickness="1" HorizontalAlignment="Left" Height="56" Margin="795,0,0,0" VerticalAlignment="Top" Width="229">
            <TextBlock  Name="currentTimeTextBlock"  HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" FontSize="20"/>
        </Border>
        <Border BorderBrush="Transparent" BorderThickness="1" HorizontalAlignment="Left" Height="389" Margin="0,141,0,0" VerticalAlignment="Top" Width="207">
            <StackPanel Orientation="Vertical">
                <Button Content="{DynamicResource Main Page}" HorizontalAlignment="Stretch" Height="82" FontSize="15" FontWeight="Bold" Click="MainWindowButton_Click"/>
                <Button Content="{DynamicResource Manual Control}" HorizontalAlignment="Stretch" Height="77" FontSize="15" FontWeight="Bold" Click="ManualControlButton_Click"/>
                <Button Content="{DynamicResource Parameter Setting}" HorizontalAlignment="Stretch" Height="76" FontSize="15" FontWeight="Bold" Click="ParameterConfigButton_Click"/>
                <Button Content="{DynamicResource Internet Config}" HorizontalAlignment="Stretch" Height="76" FontSize="15" FontWeight="Bold" Click="InternetConfigButton_Click"/>
                <Button Content="{DynamicResource Log}" HorizontalAlignment="Stretch" Height="75" FontSize="15" FontWeight="Bold" Click="DebugLogButton_Click"/>

            </StackPanel>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="456" Margin="223,141,0,0" VerticalAlignment="Top" Width="731">
            <ContentControl Name="ContentDisplay" />
        </Border>
        <Border BorderBrush="Transparent" BorderThickness="1" HorizontalAlignment="Left" Height="113" Margin="593,602,0,0" VerticalAlignment="Top" Width="361">
            <StackPanel Orientation="Horizontal" Margin="-58,0,0,0">
                <Button x:Name="StartAutoRunButton" Content="Start" Height="64" Width="96" FontWeight="Bold" Margin="0,0,10,0" Click="StartAutoRun_Click" />
                <Button x:Name="StopAutoRunButton" Content="Exit" Height="64" Width="96" FontWeight="Bold" Margin="0,0,10,0" Click="StopAutoRun_Click"/>
                <Button x:Name="PauseAutoRunButton" Content="Pause" Height="64" Width="96" FontWeight="Bold" Margin="0,0,10,0" Click="PauseAutoRun_Click"/>
                <Button Content="Reset" Height="64" Width="96" FontWeight="Bold" Margin="0,0,10,0" />
            </StackPanel>
        </Border>
        <Border BorderBrush="Transparent" BorderThickness="1" HorizontalAlignment="Left" Height="68" Margin="237,628,0,0" VerticalAlignment="Top" Width="275">
            <StackPanel Orientation="Horizontal" Margin="0,0,136,0">
                <Button Content="飞达1" Height="64" Width="48" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button Content="飞达2" Height="64" Width="48" FontWeight="Bold" />
            </StackPanel>
        </Border>


    </Grid>
</Window>
