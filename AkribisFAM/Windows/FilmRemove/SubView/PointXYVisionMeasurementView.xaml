<UserControl x:Class="AkribisFAM.Windows.PointXYVisionMeasurementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AkribisFAM.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" Background="White" Margin="10">
        <StackPanel Orientation="Horizontal" Margin="10 0">
            <Label Content="Product" FontSize="16" FontWeight="Bold" />
            <Label Content="{Binding Index}" FontSize="16" FontWeight="Bold" Width="100" />
            <Label Content="SN :" Foreground="DodgerBlue" FontWeight="Bold"/>
            <Label Content="{Binding SerialNumber}" Foreground="DodgerBlue" FontWeight="Bold"/>
        </StackPanel>
        <ItemsControl ItemsSource="{Binding VisionMeasurements}" Grid.Column="0">

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!--<materialDesign:Card BorderThickness="1" BorderBrush="Black" Height="40" >-->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition MinWidth="100"/>
                        </Grid.ColumnDefinitions>
                        <Border BorderThickness="1"  BorderBrush="Black" VerticalAlignment="Top" Grid.Column="0">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="# "  Grid.Column="0" FontWeight="Bold" FontSize="16" Foreground="DarkBlue" VerticalAlignment="Center"/>
                                <Label Content="{Binding MeasurementCount}"  FontSize="16" Foreground="DarkBlue" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <!--<StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >-->
                        <Border BorderThickness="1"  BorderBrush="Black" VerticalAlignment="Top" Grid.Column="1">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="X : "  Grid.Column="0" FontWeight="Bold" FontSize="16" Foreground="DarkBlue" VerticalAlignment="Center"/>
                                <Label Content="{Binding XMeasurePosition}"  FontSize="16" Foreground="DarkBlue" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border BorderThickness="1"  BorderBrush="Black" VerticalAlignment="Top" Grid.Column="2">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Y : "  Grid.Column="0" FontWeight="Bold" FontSize="16" Foreground="DarkRed" VerticalAlignment="Center"/>
                                <Label Content="{Binding YMeasurePosition}"  FontSize="16" Foreground="DarkRed" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border BorderThickness="1"  BorderBrush="Black" VerticalAlignment="Top" Grid.Column="3" Padding="10 0">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Height : "  Grid.Column="0" FontWeight="Bold" FontSize="16" Foreground="Green" VerticalAlignment="Center"/>
                                <Label Content="{Binding HeightMeasurement}"  FontSize="16" Foreground="Green" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!--</StackPanel>-->

                    </Grid>

                    <!--</materialDesign:Card>-->

                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
