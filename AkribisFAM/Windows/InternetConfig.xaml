<UserControl x:Class="AkribisFAM.Windows.InternetConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AkribisFAM.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200" Background="#FF70E3BC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="IP:" Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="camera1_Runner_IP" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="NoWrap" VerticalAlignment="Center" Width="210"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
        <Label Content="Port number:" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="camera1_Runner_Port" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" Width="120"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="171,0,0,0"/>
        <Label Content="camera2" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="camera2_IP" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="NoWrap" VerticalAlignment="Center" Width="210"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
        <Label Content="Port number:" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="camera2_Port" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" Width="120"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="171,0,0,0"/>
        <Label Content="camera3" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="camera3_IP" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="NoWrap" VerticalAlignment="Center" Width="210"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
        <Label Content="Port number:" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="camera3_Port" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" Width="120"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="171,0,0,0"/>
        <Label Content="IP:" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="IP:" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="lazer" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="IP:" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="lazer_IP" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="NoWrap" VerticalAlignment="Center" Width="210"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
        <Label Content="Port number:" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="lazer_Port" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" Width="120"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="171,0,0,0"/>
        <Label Content="scanner" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="IP:" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="scanner_IP" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="NoWrap" VerticalAlignment="Center" Width="210"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
        <Label Content="Port number:" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="scanner_Port" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" Width="120"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="171,0,0,0"/>
        <Label Content="MES" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="IP:" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="mes_IP" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="NoWrap" VerticalAlignment="Center" Width="210"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
        <Label Content="Port number:" Grid.Row="7" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="mes_Port" Grid.Row="7" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" Width="120"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="171,0,0,0"/>
        <Label Content="camera1-Feed" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="IP:" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="camera1_Feed_IP" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="NoWrap" VerticalAlignment="Center" Width="210"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
        <Label Content="Port number:" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="camera1_Feed_Port" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" Width="120"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="171,0,0,0" Grid.Row="1"/>
        <Label Content="camera1-Runner" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="ModbusTCP" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="IP:" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="ModbusTCP_IP" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="NoWrap" VerticalAlignment="Center" Width="210"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <Label Content="Port number:" Grid.Row="8" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"   Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="ModbusTCP_Port" Grid.Row="8" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="NoWrap" VerticalAlignment="Center" Width="120"   Foreground="Black" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="171,0,0,0"/>
        <Button x:Name="Apply" Grid.Column="3" Content="Apply" HorizontalAlignment="Center" Grid.Row="10" VerticalAlignment="Center" Height="47" Width="92" Click="Apply_Click"/>
        <Grid Grid.Column="3" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Connect_camera1_Feed" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Connect_Click"/>
            <Button x:Name="Disconnect_camera1_Feed" Grid.Column="1" Content="Disconnect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Disonnect_Click"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Connect_camera1_Runner" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Connect_Click"/>
            <Button x:Name="Disconnect_camera1_Runner" Grid.Column="1" Content="Disconnect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Disonnect_Click"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Connect_camera2" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Connect_Click"/>
            <Button x:Name="Disconnect_camera2" Grid.Column="1" Content="Disconnect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Disonnect_Click"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Connect_camera3" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Connect_Click"/>
            <Button x:Name="Disconnect_camera3" Grid.Column="1" Content="Disconnect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Disonnect_Click"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Connect_lazer" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Connect_Click"/>
            <Button x:Name="Disconnect_lazer" Grid.Column="1" Content="Disconnect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Disonnect_Click"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Connect_scanner" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Connect_Click"/>
            <Button x:Name="Disconnect_scanner" Grid.Column="1" Content="Disconnect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Disonnect_Click"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Connect_mes" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Connect_Click"/>
            <Button x:Name="Disconnect_mes" Grid.Column="1" Content="Disconnect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Disonnect_Click"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Connect_ModbusTCP" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ModbusTCPConnect_Click"/>
            <Button x:Name="Disconnect_ModbusTCP" Grid.Column="1" Content="Disconnect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ModbusTCPDisonnect_Click"/>
        </Grid>
        <ComboBox x:Name="device" HorizontalAlignment="Center" Grid.Row="9" VerticalAlignment="Center" Width="150">
            <ComboBoxItem Content="camera1_Feed"/>
            <ComboBoxItem Content="camera1_Runner"/>
            <ComboBoxItem Content="camera2"/>
            <ComboBoxItem Content="camera3"/>
            <ComboBoxItem Content="lazer"/>
            <ComboBoxItem Content="scanner"/>
        </ComboBox>
        <TextBox x:Name="Command" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="9" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="580" Grid.ColumnSpan="2" Height="40"/>
        <Button Grid.Column="3" Content="send" HorizontalAlignment="Center" Grid.Row="9" VerticalAlignment="Center" Click="Button_Click"/>
        <Label Grid.Column="1" Content="Network" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
