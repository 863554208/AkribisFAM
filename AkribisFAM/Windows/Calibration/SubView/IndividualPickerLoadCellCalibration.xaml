<UserControl x:Class="AkribisFAM.Windows.IndividualPickerLoadCellCalibration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AkribisFAM.Windows"
             xmlns:conv="clr-namespace:AkribisFAM.Windows.Converters"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:EnumToStringConverter x:Key="EnumToStringConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Gray" BorderThickness="0 0 0 2" Margin="5">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="{Binding Model.picker, Converter={StaticResource EnumToStringConverter}}" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                        <Label Content="Last Update :" FontWeight="Bold"/>
                        <Label x:Name="lblModelUpdate" Content="{Binding Model.LastUpdate}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                        <Label Content="Model name :" FontWeight="Bold"/>
                        <Label x:Name="lblModelName" Content="{Binding Model.Description}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <lvc:CartesianChart Grid.Row="1" Margin="10" Background="White">

                <lvc:CartesianChart.Series>
                    <lvc:ScatterSeries Title="Data" Values="{Binding Values}" />
                    <lvc:LineSeries Title="Model" Values="{Binding LineValues}" 
                       StrokeThickness="2" 
                       Fill="Transparent"
                       PointGeometry="{x:Null}"  />
                </lvc:CartesianChart.Series>

                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Unit="1"></lvc:Axis>
                </lvc:CartesianChart.AxisY>

                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Unit="500"></lvc:Axis>
                </lvc:CartesianChart.AxisX>

            </lvc:CartesianChart>

        </Grid>
        <Grid Grid.Column="1" Background="LightGray" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Border Background="White" Grid.Row="0">
                <GroupBox Margin="5" 
                            Header="Load cell calibration" 
                            Style="{StaticResource MaterialDesignGroupBox}" 
                            UseLayoutRounding="True">
                    <Grid  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Content="Load cell reading" Grid.Row="0" Grid.Column="0"/>
                        <Label Content="Calibrate weight" Grid.Row="1" Grid.Column="0"/>

                        <Label Content=":" Grid.Row="0" Grid.Column="1"/>
                        <Label Content=":" Grid.Row="1" Grid.Column="1"/>

                        <TextBox x:Name="txtLoadCellReading" IsEnabled="False" Text="0" HorizontalContentAlignment="Center" Grid.Row="0" Grid.Column="2" Background="LightGray"/>
                        <TextBox x:Name="txtNewtonCalib" Text="0" HorizontalContentAlignment="Center" Grid.Row="1" Grid.Column="2" Background="DarkGray"/>

                        <Label Content="N" Grid.Row="0" Grid.Column="3"/>
                        <Label Content="g" Grid.Row="1" Grid.Column="3"/>
                        <Grid Grid.Row="2" Grid.ColumnSpan="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnStartCalibLoadCellNewton" Grid.Column="0"  Margin="5" Content="Start calibration"  Click="btnStartCalibLoadCellNewton_Click" />
                            <Button x:Name="btnEndCalibLoadCellNewton" Grid.Column="1"  Margin="5" Content="End calibration" Click="btnEndCalibLoadCellNewton_Click" />
                        </Grid>
                        <Button x:Name="btnZeroing" Grid.Row="3" Grid.ColumnSpan="3" Margin="5" Content="Zero-ing" Click="btnZeroing_Click" />
                    </Grid>
                </GroupBox>
            </Border>




            <Border Background="White" Grid.Row="1" Grid.ColumnSpan="4" Grid.RowSpan="2">
                <GroupBox Margin="5" 
                    Header="Picker force control calibration" 
                    Style="{StaticResource MaterialDesignGroupBox}" 
                    UseLayoutRounding="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Height="50" Grid.Row="0" Grid.ColumnSpan="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Newton (N)" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtNewton" Grid.Column="1" VerticalAlignment="Center" Background="DarkGray"
                                     PreviewTextInput="txtDoubleOnly_PreviewTextInput" HorizontalContentAlignment="Center"
                                     PreviewKeyDown="txtNumberOnly_PreviewKeyDown" Text="0"
                                     TextChanged="txtNewton_TextChanged"/>
                            <Label Content="Current (mA)" Grid.Column="2" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtCurrent" Grid.Column="4" VerticalAlignment="Center" Background="DarkGray"
                                      PreviewTextInput="txtDoubleOnly_PreviewTextInput" HorizontalContentAlignment="Center"
                                        PreviewKeyDown="txtNumberOnly_PreviewKeyDown" TextChanged="txtCurrent_TextChanged"
                                     Text="0"/>
                        </Grid>
                        <Button x:Name="btnMoveToLoadCell" Grid.Row="1" Grid.ColumnSpan="4" Margin="5" Content="Move to load cell position" Click="btnMoveToLoadCell_Click" />

                        <Grid Grid.Row="2" Grid.ColumnSpan="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnApplyForce" Grid.Column="0" Content="Z down apply force" Click="btnApplyForce_Click" Margin="5"/>
                            <Button x:Name="btnZup" Grid.Column="1" Content="Z up" Click="btnZup_Click" Margin="5" />
                        </Grid>


                        <Grid Grid.Row="3" Margin="10 20 10 10" Grid.ColumnSpan="4" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Content="Sample Size" Grid.Row="0" Grid.Column="0"/>
                            <Label Content="Initial Current" Grid.Row="1" Grid.Column="0"/>
                            <Label Content="Step Current" Grid.Row="2" Grid.Column="0"/>

                            <Label Content=":" Grid.Row="0" Grid.Column="1"/>
                            <Label Content=":" Grid.Row="1" Grid.Column="1"/>
                            <Label Content=":" Grid.Row="2" Grid.Column="1"/>

                            <TextBox x:Name="txtSampleSize" Text="0" PreviewTextInput="txtIntOnly_PreviewTextInput"  PreviewKeyDown="txtNumberOnly_PreviewKeyDown"
                                     HorizontalContentAlignment="Center" Grid.Row="0" Grid.Column="2" Background="DarkGray"/>
                            <TextBox x:Name="txtInitCurrent" Text="0" PreviewTextInput="txtIntOnly_PreviewTextInput"  PreviewKeyDown="txtNumberOnly_PreviewKeyDown"
                                     HorizontalContentAlignment="Center" Grid.Row="1" Grid.Column="2" Background="DarkGray"/>
                            <TextBox x:Name="txtStepCurrent" Text="0" PreviewTextInput="txtIntOnly_PreviewTextInput"  PreviewKeyDown="txtNumberOnly_PreviewKeyDown"
                                     HorizontalContentAlignment="Center" Grid.Row="2" Grid.Column="2" Background="DarkGray"/>

                            <Label Content="" Grid.Row="0" Grid.Column="3"/>
                            <Label Content="mA" Grid.Row="1" Grid.Column="3"/>
                            <Label Content="mA" Grid.Row="2" Grid.Column="3"/>

                        </Grid>
                        <Button x:Name="btnCalibration" Grid.Row="4" Grid.ColumnSpan="4" Margin="5" Content="Force control calibration" Click="btnCalibration_Click"/>
                        <Button x:Name="btnSave" Grid.Row="5" Grid.ColumnSpan="4" Margin="5 10" Content="Save" Click="btnSave_Click"/>
                    </Grid>
                </GroupBox>
            </Border>

        </Grid>
    </Grid>
</UserControl>
