<Window x:Class="AkribisFAM.Windows.LoginViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AkribisFAM.Windows"
        mc:Ignorable="d"
        Title="LoginViewModel" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <Border BorderBrush="Black" BorderThickness="0" Width="400" Height="200">
                <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                    <Label Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                        <Label Content="User Identity" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100"/>
                        <TextBox HorizontalAlignment="Center" Text="Engineer" VerticalAlignment="Center" Height="25" Width="200" Background="LightGray" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                        <Label Content="User" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100"/>
                        <TextBox Name="UsernameTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="30" TextAlignment="Left" VerticalContentAlignment="Center" TextChanged="UsernameTextBox_TextChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100"/>
                        <PasswordBox Name="PasswordBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="30" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <Button Content="Login" Width="100" Height="30" Click="LoginButton_Click" Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
