<UserControl x:Class="AkribisFAM.Windows.SingleProductTrackerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:AkribisFAM.Windows"
             xmlns:con="clr-namespace:AkribisFAM.Windows.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <con:PassPresentToBrushConverter x:Key="PassPresentToBrushConverter" />
    </UserControl.Resources>
    <!--<Border BorderBrush="Black" BorderThickness="1" Width="250" Height="Auto">-->
    <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp5" Width="250" Height="Auto"
                         BorderThickness="2"
                         BorderBrush="LightGray">
        <Button Style="{Binding}" Background="Transparent">

            <StackPanel Orientation="Vertical" Width="250" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Border BorderBrush="Black" BorderThickness="0 0 0 1" Opacity=".8" Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Name}" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14" Foreground="Black"/>

                        <Label Content="{Binding Barcode}" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14" Foreground="Blue"/>
                    </StackPanel>
                </Border>
                <!--<Label Content="{Binding Name}" HorizontalAlignment="Stretch"/>-->
                <!--<ScrollViewer>-->
                <ItemsControl x:Name="itemControlStation" ItemsSource="{Binding PartArray}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding Column}" Rows="{Binding Row}"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Background="Transparent">
                                <!--<StackPanel Orientation="Horizontal">-->
                                <!--Background="{Binding failed, Converter={StaticResource BrushColorInvertConverter}}"-->
                                <Button Content="{Binding Index}" Margin="4" 
                                    Opacity="0.99"
                                    Foreground="White" Click="Button_Click">
                                    <Button.Background>
                                        <MultiBinding Converter="{StaticResource PassPresentToBrushConverter}">
                                            <Binding Path="present"/>
                                            <Binding Path="failed"/>
                                        </MultiBinding>
                                    </Button.Background>
                                </Button>
                                <!--</StackPanel>-->
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <!--</ScrollViewer>-->
            </StackPanel>
        </Button>
    </materialDesign:Card>
    <!--</Border>-->
</UserControl>
