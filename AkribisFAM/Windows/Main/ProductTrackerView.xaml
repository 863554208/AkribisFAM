                                    </DataTemplate>
                                </ContentControl.ContentTemplate>
                            </ContentControl>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->

            </Border>
            <ScrollViewer Grid.Row="1" >
                <!--<ListView ItemsSource="{Binding Items}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                    <ListViewItem>
                        <DataGridTextColumn Header="Station" Binding="{Binding Station}" />
                        <DataGridCheckBoxColumn Header="Status" Binding="{Binding Status}" />
                        <DataGridTextColumn Header="Step" Binding="{Binding Steps}" />
                        <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" />
                        <DataGridCheckBoxColumn Header="Ready" Binding="{Binding StationReadyStatus}" />
                        <DataGridCheckBoxColumn Header="Tray Present" Binding="{Binding StationTrayStatus}" />
                        <DataGridCheckBoxColumn Header="Send Next" Binding="{Binding TraySendingNextStation}" />
                        -->
                <!--<DataGridTextColumn Header="Tray ID" Binding="{Binding TrayData.Id}" />-->
                <!--
                    </ListViewItem>
                </ListView>-->
                <ListView ItemsSource="{Binding Items}" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Station}" Margin="10 0"/>
                                <TextBlock Text="{Binding Status}" Margin="10 0"/>
                                <TextBlock Text="{Binding Steps}" Margin="10 0"/>
                                <TextBlock Text="{Binding StartTime}" Margin="10 0"/>
                                <TextBlock Text="{Binding StationReadyStatus}" Margin="10 0"/>
                                <TextBlock Text="{Binding StationTrayStatus}" Margin="10 0"/>
                                <TextBlock Text="{Binding TraySendingNextStation}" Margin="10 0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
            <ScrollViewer Grid.Row="2">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="station :"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Laser" x:Name="btnLaser" IsChecked="True"/>
                            <RadioButton Content="Foam" x:Name="btnFoam"/>
                            <RadioButton Content="Recheck" x:Name="btnRecheck"/>
                            <RadioButton Content="Reject" x:Name="btnReject"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="state :"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Empty" x:Name="btnEmpty" IsChecked="True"/>
                            <RadioButton Content="TrayIncoming" x:Name="btnTrayIncoming"/>
                            <RadioButton Content="InProgress" x:Name="btnInProgress"/>
                            <RadioButton Content="TrayOutgoing" x:Name="btnTrayOutgoing"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="step :"/>
                        <TextBox x:Name="txtStep" Width="100" Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="True" x:Name="btnTrue" IsChecked="True"/>
                        <RadioButton Content="False" x:Name="btnFalse"/>
                    </StackPanel>
                    <Button x:Name="btnSet" Click="btnSet_Click" Content="Set"/>
                    <Button x:Name="btnReset" Click="btnSet2_Click" Content="Reset"/>
                    <Button x:Name="btnAddIncoming" Click="btnSet3_Click" Content="Add incoming tray"/>
                </StackPanel>
