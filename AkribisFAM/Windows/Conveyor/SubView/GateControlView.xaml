<UserControl x:Class="AkribisFAM.Windows.GateControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AkribisFAM.Windows"
             xmlns:converter="clr-namespace:AkribisFAM.Windows.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converter:EnumToBrushConverter x:Key="EnumToBrushConverter"/>
    </UserControl.Resources>
    <Border BorderThickness="1" CornerRadius="3" BorderBrush="Black">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="Black" BorderThickness="0 0 0 1" Opacity=".5" Margin="10">
                <Label Content="{Binding StationName}" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>
            </Border>
            <StackPanel Orientation="Vertical" Grid.Row="1">
                <Label Content="Conveyor" Width="100" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left"  Margin="20 0 ">
                    <!--<RadioButton x:Name="btnMove" Content="Move" Width="100" Margin="3"   Style="{StaticResource MaterialDesignPaperButton}"/>-->
                    <!--<RadioButton x:Name="btnSlowMove" Content="Slow Move" Width="100" Margin="3"  Style="{StaticResource MaterialDesignPaperButton}"/>-->
                    <!--<RadioButton x:Name="btnStop" Content="Stop" Background="Red" Foreground="White" Width="100" Margin="3"   Style="{StaticResource MaterialDesignPaperButton}"/>-->
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="20 0">
                    <ListView ItemsSource="{Binding ConveyorInList}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >
                                    <materialDesign:PackIcon Kind="CircleSlice8" 
                                        Foreground="{Binding ., Converter={StaticResource EnumToBrushConverter}}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Label Content="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Row="2" >
                <Label Content="Lifter" Width="100" FontWeight="Bold"  FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20 0 ">
                    <RadioButton x:Name="btnLiftUp" Content="ZUp" Width="100" Margin="3"  Style="{StaticResource MaterialDesignPaperButton}" Click="btnLiftUp_Click"/>
                    <RadioButton x:Name="btnLiftDown" Content="ZDown" Width="100" Margin="3"  Style="{StaticResource MaterialDesignPaperButton}" Click="btnLiftDown_Click"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="20 0">
                    <ListView ItemsSource="{Binding LifterInList}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >

                                    <materialDesign:PackIcon Kind="CircleSlice8" 
                                        Foreground="{Binding ., Converter={StaticResource EnumToBrushConverter}}"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Label Content="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Row="3">
                <Label Content="Gate" Width="100" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="20 0 ">
                    <RadioButton x:Name="btnGateUp" Content="ZUp" Width="100" Margin="3"  Style="{StaticResource MaterialDesignPaperButton}" Click="btnGateUp_Click"/>
                    <RadioButton x:Name="btnGateDown" Content="ZDown" Width="100" Margin="3"  Style="{StaticResource MaterialDesignPaperButton}" Click="btnGateDown_Click"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="20 0">
                    <ListView ItemsSource="{Binding GateInList}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >
                                    <materialDesign:PackIcon Kind="CircleSlice8" 
     Foreground="{Binding ., Converter={StaticResource EnumToBrushConverter}}"
     HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                    <Label Content="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

            </StackPanel>

        </Grid>
    </Border>
</UserControl>
