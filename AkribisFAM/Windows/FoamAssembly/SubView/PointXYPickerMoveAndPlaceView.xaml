<UserControl x:Class="AkribisFAM.Windows.PointXYPickerMoveAndPlaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AkribisFAM.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderThickness="1" CornerRadius="3" BorderBrush="Black">
        <StackPanel Orientation="Vertical" Margin="10">
            <Border BorderThickness="0 0 0 2" BorderBrush="LightGray" Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Teachpoint "/>
                    <Label Content="{Binding TeachPointIndex}"/>
                </StackPanel>
            </Border>
            <StackPanel Orientation="Horizontal">

                <StackPanel Width="200" Orientation="Horizontal">
                    <Label Content="X : " FontWeight="Bold" FontSize="16" Foreground="DarkBlue" />
                    <Label Content="{Binding X}" FontSize="16" Foreground="DarkBlue" />
                </StackPanel>
                <StackPanel Width="200" Orientation="Horizontal">
                    <Label Content="Y : "  FontWeight="Bold" FontSize="16" Foreground="DarkRed" />
                    <Label Content="{Binding Y}" FontSize="16" Foreground="DarkRed" />
                </StackPanel>
            </StackPanel>
            <ListBox x:Name="RadioButtonGroupChoiceChipPrimaryOutline" IsEnabled="{Binding MotionButtonEnable}" Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineListBox}" Margin="0 0 0 10">
                <ListBoxItem x:Name="btnPicker1" Content="Picker1" Selected="btnPicker_Selected"/>
                <ListBoxItem x:Name="btnPicker2" Content="Picker2" Selected="btnPicker_Selected"/>
                <ListBoxItem x:Name="btnPicker3" Content="Picker3" Selected="btnPicker_Selected"/>
                <ListBoxItem x:Name="btnPicker4" Content="Picker4" Selected="btnPicker_Selected"/>
            </ListBox>
            <Button x:Name="btnMoveToPos" Margin="10" Content="Move" Click="btnMoveToPos_Click"/>
            <Button x:Name="btnPlace"  Margin="10" Content="Place" Click="btnPlace_Click"/>

        </StackPanel>
    </Border>
</UserControl>
