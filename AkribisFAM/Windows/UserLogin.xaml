<Window x:Class="AkribisFAM.Windows.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:AkribisFAM.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AKBMessageBox" Height="Auto" Width="620"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded"
        WindowState="Normal"
        SizeToContent="WidthAndHeight">
    <Window.Resources>
        <Style x:Key="{x:Type ToggleButton}" TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource MaterialDesignSwitchToggleButton}" />
    </Window.Resources>
    <Border Width="400"
          Height="500"
          Background="White"
          CornerRadius="6">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15"
                            Direction="-90"
                            RenderingBias="Quality"
                            ShadowDepth="2"
                            Color="Gray" />
        </Border.Effect>
        
        <Canvas>

            <Button Background="Transparent"
                            Foreground="Red"
                            Canvas.Right="5"
                            Canvas.Top="5"
                            Height="40"
                            Width="40"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Center"
                            BorderBrush="Transparent"
                            Click="Shutdown">
                <materialDesign:PackIcon Kind="WindowClose" Margin="-15 -2 -15 0" />
            </Button>

            <StackPanel Orientation="Vertical"
                   Margin="55">
                <TextBlock Text="User Login"
                      FontSize="30"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top"
                      FontWeight="Bold"
                      Padding="10" />
                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <TextBlock Text="User"
                              Grid.Row="0"
                              Margin="0,10"
                              HorizontalAlignment="Left"
                              FontSize="14" />
                        <!--<TextBox  Grid.Column="1"
  Grid.Row="1"
  Padding="0,5"
  Width="280"
  BorderThickness="0,0,0,1"
  FontSize="16"
  HorizontalAlignment="Left" />-->
                        <ComboBox x:Name="cbxUser"
                             SelectedIndex="0"
                             FontSize="16"
                             SelectedValuePath="Content"
                             DropDownOpened="cbxUser_DropDownOpened"
                             SelectedValue="{Binding Username}"
                             Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEditable="True">
                            <!--<ComboBoxItem Content="Operator" />
                       <ComboBoxItem Content="Engineer" />-->
                        </ComboBox>
                        <TextBlock Text="Password"
                              Grid.Row="2"
                              Margin="0,10"
                              HorizontalAlignment="Left"
                              FontSize="14" />
                        <PasswordBox Grid.Row="3"
                                x:Name="tbPassword"
                                Padding="0,5"
                                Width="280"
                                BorderThickness="0,0,0,1"
                                FontSize="16"
                                HorizontalAlignment="Left"
                                MouseDoubleClick="tbPassword_MouseDoubleClick"
                                KeyDown="tbPassword_KeyDown"
                                PasswordChanged="PasswordBox_PasswordChanged" />
                        <Label Content="{Binding LoginErrorMsg}"
                          Foreground="Red"
                          HorizontalAlignment="Right" />
                        <!--<TextBox Text="{Binding Password}"
                        FontFamily="pack://application:,,,/Resources/#password" />-->
                    </StackPanel>

                </Grid>
                <!--<TextBlock Text="forgot password?"
                HorizontalAlignment="Right" />-->
                <Grid Margin="0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="LoginBtn"
                       Content="Login"
                       Foreground="White"
                       Background="#37aced"
                       Margin="0,20,2,0"
                       Height="42"
                       FontSize="14"
                       IsEnabled="{Binding LoginButtonEnabled}"
                       Click="btnLogin">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="LoginBorder"
                                               Background="{TemplateBinding Background}"
                                               CornerRadius="16">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                             VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                    Value="True">
                                                    <Setter Property="Background"
                                                       Value="#3ab7fc"
                                                       TargetName="LoginBorder" />
                                                    <!--<Setter Property="TextBlock.FontWeight"
                                                   Value="Bold"
                                                   TargetName="LoginBorder" />-->
                                                    <Setter Property="Cursor"
                                                       Value="Hand"
                                                       TargetName="LoginBorder" />
                                                    <!--<Setter Property="TextBlock.Foreground"
                                                   Value="Black"
                                                   TargetName="LoginBorder" />-->
                                                </Trigger>
                                                <Trigger Property="IsEnabled"
                                                    Value="False">
                                                    <Setter Property="Background"
                                                       Value="Gainsboro"
                                                       TargetName="LoginBorder" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="LogoutBtn"
                       Content="Logout"
                       Grid.Column="1"
                       Foreground="White"
                       Background="#ff333d"
                       IsEnabled="{Binding LogoutButtonEnabled}"
                       Margin="2,20,0,0"
                       Height="42"
                       FontSize="14"
                       Click="btnLogout">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="LogoutBorder"
                                               Background="{TemplateBinding Background}"
                                               CornerRadius="16">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                             VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                    Value="True">
                                                    <Setter Property="Background"
                                                       Value="#ff525a"
                                                       TargetName="LogoutBorder" />
                                                    <!--<Setter Property="TextBlock.FontWeight"
                                                   Value="Bold"
                                                   TargetName="LoginBorder" />-->
                                                    <Setter Property="Cursor"
                                                       Value="Hand"
                                                       TargetName="LogoutBorder" />
                                                    <!--<Setter Property="TextBlock.Foreground"
                                                   Value="Black"
                                                   TargetName="LoginBorder" />-->
                                                </Trigger>
                                                <Trigger Property="IsEnabled"
                                                    Value="False">
                                                    <Setter Property="Background"
                                                       Value="Gainsboro"
                                                       TargetName="LogoutBorder" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                </Grid>

                <!--<TextBlock Text="Not a member?"
                  Margin="0,20"
                  VerticalAlignment="Bottom"
                  HorizontalAlignment="Center" />
       <TextBlock Text="Sign Up"
                  Margin="0,10"
                  VerticalAlignment="Bottom"
                  HorizontalAlignment="Center" />-->
            </StackPanel>

        </Canvas>
   
    </Border>

</Window>
