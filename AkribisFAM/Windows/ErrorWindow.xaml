<Window x:Class="AkribisFAM.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AkribisFAM.Windows"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ErrorData" AutoGenerateColumns="False"  ItemsSource="{Binding ErrorInfos}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="DateTime" Binding="{Binding DateTime}"/>
                <DataGridTextColumn Header="User"  Binding="{Binding User}"/>
                <DataGridTextColumn Header="Lot"  Binding="{Binding Lot}"/>
                <DataGridTextColumn Header="ErrorCode" Binding="{Binding ErrorCode}" />
                <DataGridTextColumn Header="Level" Binding="{Binding Level}" />
                <DataGridTextColumn Header="Info" Binding="{Binding Info}" />
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3.6*"/>
                <ColumnDefinition Width="1.6*"/>
                <ColumnDefinition Width="1.8*"/>
                <ColumnDefinition Width="1.8*"/>
                <ColumnDefinition Width="1.4*"/>
                <ColumnDefinition Width="1.6*"/>
                <ColumnDefinition Width="1.7*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="PopBtn" Grid.Column="5" Content="Pop" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="PopBtn_Click" Margin="0,0,0,4"/>
            <Button x:Name="ClearBtn" Grid.Column="6" Content="Clear" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ClearBtn_Click"/>
            <Button x:Name="ExportBtn" Grid.Column="7" Content="Export" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ExportBtn_Click"/>
            <Button x:Name="HistoryBtn" Grid.Column="4" Content="History" HorizontalAlignment="Center" VerticalAlignment="Center" Click="HistoryBtn_Click"/>
            <Button x:Name="CurrentBtn" Grid.Column="3" Content="Current" HorizontalAlignment="Center" VerticalAlignment="Center" Click="CurrentBtn_Click"/>
            <ComboBox x:Name="Namebox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" SelectionChanged="Namebox_SelectionChanged"/>
            <ComboBox x:Name="Databox" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200"/>
            <Button x:Name="QueryBtn" Grid.Column="2" Content="Query" HorizontalAlignment="Center" VerticalAlignment="Center" Click="QueryBtn_Click"/>
        </Grid>
    </Grid>
</Window>
