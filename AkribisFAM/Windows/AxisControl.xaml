                        <Button x:Name="Axis27" Content="Axis 27" HorizontalAlignment="Left" Margin="1,474,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
                        <Border Margin="-305,34,214,-34" Grid.RowSpan="2"/>
                    </Grid>
                </ScrollViewer>
            </StackPanel>
        </GroupBox>
    </Grid>


</UserControl>
    

