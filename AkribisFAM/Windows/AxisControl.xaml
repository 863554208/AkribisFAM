                        <Button x:Name="Axis13" Content="Axis 13" HorizontalAlignment="Left" Margin="1,138,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
