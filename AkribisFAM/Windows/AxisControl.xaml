<UserControl x:Class="AkribisFAM.Windows.AxisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AkribisFAM.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="390" d:DesignWidth="768">
    <Grid Margin="0,0,32,0" Background="Yellow">
        <GroupBox Header="Axis Status" Margin="152,0,271,0" Height="338" VerticalAlignment="Center">
            <Grid ShowGridLines="True" HorizontalAlignment="Left" Width="320">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="41*"/>
                    <ColumnDefinition Width="57*"/>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Content ="Axis Number" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="84"/>
                <Label x:Name="currentAxisLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Width="88" HorizontalContentAlignment="Center" Height="25"/>
                <Label Content="Current Position" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" HorizontalContentAlignment="Center" Width="108" Height="25"/>
                <Label Content="Target Position" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" HorizontalContentAlignment="Center" Height="25" Width="98"/>
                <Label Grid.Column="1" Content="{Binding AxisPosition}" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="90" HorizontalContentAlignment="Center" Height="25"/>
                <Label Content="{Binding Text, ElementName=Targetpos}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="1" Width="98" HorizontalContentAlignment="Center" Height="25"/>
                <Label Content="Velocity" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="56"/>
                <Label Grid.Column="1" Content="Enable" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="48"/>
                <Label Grid.Column="2" Content="In Position" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="70"/>
                <Ellipse x:Name="Enablelight" HorizontalAlignment="Center" Height="20" Stroke="Black" VerticalAlignment="Center" Width="20" Grid.Row="3" Grid.Column="1">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="#FF898989"/>
                    </Ellipse.Fill>
                </Ellipse>
                <Ellipse HorizontalAlignment="Center" Fill="#FF898989" Height="20" Stroke="Black" VerticalAlignment="Center" Width="20" Grid.Row="3" Grid.Column="2"/>
                <Label Content="0" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="88" HorizontalContentAlignment="Center" Height="25"/>
                <Label Content="Original Point" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="90"/>
                <Label Grid.Column="1" Content="Positive Hard Limit" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="112"/>
                <Label Grid.Column="2" Content="Negative Hard Limit" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="106"/>
                <Ellipse HorizontalAlignment="Center" Fill="#FF898989" Height="20" Stroke="Black" VerticalAlignment="Center" Width="20" Grid.Row="5"/>
                <Ellipse HorizontalAlignment="Center" Fill="#FF898989" Height="20" Stroke="Black" VerticalAlignment="Center" Width="20" Grid.Row="5" Grid.Column="1"/>
                <Ellipse HorizontalAlignment="Center" Fill="#FF898989" Height="20" Stroke="Black" VerticalAlignment="Center" Width="20" Grid.Row="5" Grid.Column="2"/>
                <Label Content="Alarm" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="44"/>
                <Label Grid.Column="1" Content="Positive Soft Limit" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="112"/>
                <Label Grid.Column="2" Content="Positive Soft Limit" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="106"/>
                <Ellipse HorizontalAlignment="Center" Fill="#FF898989" Height="20" Stroke="Black" VerticalAlignment="Center" Width="20" Grid.Row="7"/>
                <Ellipse HorizontalAlignment="Center" Fill="#FF898989" Height="20" Stroke="Black" VerticalAlignment="Center" Width="20" Grid.Row="7" Grid.Column="1"/>
                <Ellipse HorizontalAlignment="Center" Fill="#FF898989" Height="20" Stroke="Black" VerticalAlignment="Center" Width="20" Grid.Row="7" Grid.Column="2"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Motion Test" Margin="470,26,0,11" HorizontalAlignment="Left" Width="256">
            <Grid Margin="0,0,5,0" Height="342">
                <Grid.RowDefinitions>
                    <RowDefinition Height="182*"/>
                    <RowDefinition Height="149*"/>
                </Grid.RowDefinitions>
                <Label Content="Axis Number:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="AxiscomboBox" HorizontalAlignment="Left" Margin="115,12,0,0" VerticalAlignment="Top" Width="87" SelectionChanged="AxiscomboBox_SelectionChanged">
                    <ComboBoxItem Content="Axis 1"/>
                    <ComboBoxItem Content="Axis 2"/>
                    <ComboBoxItem Content="Axis 3"/>
                    <ComboBoxItem Content="Axis 4"/>
                    <ComboBoxItem Content="Axis 5"/>
                    <ComboBoxItem Content="Axis 6"/>
                    <ComboBoxItem Content="Axis 7"/>
                    <ComboBoxItem Content="Axis 8"/>
                    <ComboBoxItem Content="Axis 9"/>
                    <ComboBoxItem Content="Axis 10"/>
                    <ComboBoxItem Content="Axis 11"/>
                    <ComboBoxItem Content="Axis 12"/>
                    <ComboBoxItem Content="Axis 13"/>
                    <ComboBoxItem Content="Axis 14"/>
                    <ComboBoxItem Content="Axis 15"/>
                    <ComboBoxItem Content="Axis 16"/>
                    <ComboBoxItem Content="Axis 17"/>
                    <ComboBoxItem Content="Axis 18"/>
                    <ComboBoxItem Content="Axis 19"/>
                    <ComboBoxItem Content="Axis 20"/>
                    <ComboBoxItem Content="Axis 21"/>
                    <ComboBoxItem Content="Axis 22"/>
                    <ComboBoxItem Content="Axis 23"/>
                    <ComboBoxItem Content="Axis 24"/>
                    <ComboBoxItem Content="Axis 25"/>
                    <ComboBoxItem Content="Axis 26"/>
                    <ComboBoxItem Content="Axis 27"/>
                </ComboBox>
                <Label Content="Target Position:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="Targetpos" HorizontalAlignment="Left" Margin="115,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="68" Height="20
                     " Text="200000" />
                <Label Content="mm" HorizontalAlignment="Left" Margin="188,40,0,0" VerticalAlignment="Top" FontSize="10"/>
                <Label Content="Velocity:" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="Velocitytext" HorizontalAlignment="Left" Margin="115,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="68" Height="20" Text="100000"/>
                <Label Content="mm/s" HorizontalAlignment="Left" Margin="188,70,0,0" VerticalAlignment="Top" FontSize="10"/>
                <Label Content="ACC/DEC:" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="ACCDECtext" HorizontalAlignment="Left" Margin="115,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="68" Height="20" Text="0"/>
                <Label Content="mm/s^2" HorizontalAlignment="Left" Margin="188,100,0,0" VerticalAlignment="Top" FontSize="10"/>
                <Button Content="Start" HorizontalAlignment="Left" Margin="22,8,0,0" VerticalAlignment="Top" Width="75" Height="40" Grid.Row="1" Click="Start_Click"/>
                <Button Content="Stop" HorizontalAlignment="Left" Margin="22,68,0,0" VerticalAlignment="Top" Width="75" Height="40" Grid.Row="1"/>
                <Button x:Name="MotorOn" Content="使能" HorizontalAlignment="Left" Margin="22,135,0,0" VerticalAlignment="Top" Height="36" Width="71" Click="MotorOn_Click"/>
                <Button x:Name="MotorOff" Content="下使能" HorizontalAlignment="Left" Height="36" Margin="128,135,0,0" VerticalAlignment="Top" Width="74" Click="MotorOff_Click"/>
                <Button x:Name="Jog_Move_Forword" Content="Jog_Forword" HorizontalAlignment="Left" Margin="149,43,0,0" Grid.Row="1" VerticalAlignment="Top" Height="34" Width="77"  PreviewMouseDown="JogForwordButton_MouseDown" PreviewMouseUp="JogForwordButton_MouseUp"/>
                <Button x:Name="Jog_Move_Backword" Content="Jog_Move" HorizontalAlignment="Left" Margin="149,94,0,0" Grid.Row="1" VerticalAlignment="Top" Height="28" Width="77"  PreviewMouseDown="JogBackwordButton_MouseDown" PreviewMouseUp="JogBackwordButton_MouseUp"/>
                <Button Content="Zero" HorizontalAlignment="Left" Margin="149,188,0,0" VerticalAlignment="Top" Height="28" Width="77" Grid.RowSpan="2" Click="ReturnToZero_Click"/>
                <Button Content="CNC_Move" HorizontalAlignment="Left" Margin="32,125,0,0" Grid.Row="1" VerticalAlignment="Top" Click="Button_Click"/>
            </Grid>
        </GroupBox>
