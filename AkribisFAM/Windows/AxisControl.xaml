                        <Button x:Name="Axis16" Content="Axis 16" HorizontalAlignment="Left" Margin="1,210,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
                        <Button x:Name="Axis17" Content="Axis 17" HorizontalAlignment="Left" Margin="1,234,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
                        <Button x:Name="Axis18" Content="Axis 18" HorizontalAlignment="Left" Margin="1,258,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
                        <Button x:Name="Axis19" Content="Axis 19" HorizontalAlignment="Left" Margin="1,282,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
                        <Button x:Name="Axis20" Content="Axis 20" HorizontalAlignment="Left" Margin="1,306,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
                        <Button x:Name="Axis21" Content="Axis 21" HorizontalAlignment="Left" Margin="1,330,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
                        <Button x:Name="Axis22" Content="Axis 22" HorizontalAlignment="Left" Margin="1,354,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
                        <Button x:Name="Axis23" Content="Axis 23" HorizontalAlignment="Left" Margin="1,378,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
                        <Button x:Name="Axis24" Content="Axis 24" HorizontalAlignment="Left" Margin="1,402,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
                        <Button x:Name="Axis25" Content="Axis 25" HorizontalAlignment="Left" Margin="1,426,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
