                        <Button x:Name="Axis5" Content="Axis 5" HorizontalAlignment="Left" Margin="1,106,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1"/>
                        <Button x:Name="Axis6" Content="Axis 6" HorizontalAlignment="Left" Margin="1,130,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1"/>
                        <Button x:Name="Axis7" Content="Axis 7" HorizontalAlignment="Left" Margin="1,154,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.RowSpan="2"/>
                        <Button x:Name="Axis8" Content="Axis 8" HorizontalAlignment="Left" Margin="1,18,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
                        <Button x:Name="Axis9" Content="Axis 9" HorizontalAlignment="Left" Margin="1,42,0,0" VerticalAlignment="Top" Width="56" Click="Axis_Click" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1"/>
