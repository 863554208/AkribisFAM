<UserControl x:Class="AkribisFAM.Windows.AxisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:AkribisFAM.Windows" xmlns:viewmodel="clr-namespace:AkribisFAM.ViewModel" 
             mc:Ignorable="d" 
             d:DesignHeight="790" d:DesignWidth="968">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="{DynamicResource TextAxisList}" Grid.Column="0">
            <ScrollViewer>
                <ListBox x:Name="AxisListBox" Style="{StaticResource MaterialDesignListBox}" SelectionChanged="AxisListBox_SelectionChanged">

                </ListBox>
            </ScrollViewer>
        </GroupBox>

        <GroupBox Header="{DynamicResource TextAxisStat}" Grid.Column="1">
            <Grid VerticalAlignment="Center" Height="500">
                <Grid.RowDefinitions>
                    <!-- 8 rows -->
                    <RowDefinition Height="0.7*"/>
                    <!-- Header -->
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.7*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.7*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.7*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Header Row -->
                <TextBlock VerticalAlignment="Center" Text="{DynamicResource TextAxisName}" Grid.Row="0" Grid.Column="0"  />
                <TextBlock VerticalAlignment="Center" Text="{DynamicResource TextNowAxisPos}" Grid.Row="0" Grid.Column="1"  />
                <TextBlock VerticalAlignment="Center" Text="{DynamicResource TextTargetAxisPos}" Grid.Row="0" Grid.Column="2"  />

                <!-- Row 1 -->
                <TextBlock Name="tbAxisName" Text="" Grid.Row="1" Grid.Column="0" />
                <TextBlock Name="tbNowPos" Text="" Grid.Row="1" Grid.Column="1" />
                <TextBlock Name="tbTargetPos" Text="" Grid.Row="1" Grid.Column="2" />

                <!-- Row 2 -->
                <TextBlock VerticalAlignment="Center" Name="tbAxisVel" Text="{DynamicResource TextNowAxisVel}" Grid.Row="2" Grid.Column="0"  />
                <TextBlock VerticalAlignment="Center" Text="{DynamicResource TextNowAxisEN}" Grid.Row="2" Grid.Column="1" />
                <TextBlock VerticalAlignment="Center" Text="{DynamicResource TextNowAxisInPos}" Grid.Row="2" Grid.Column="2"  />

                <!-- Row 3 -->
                <TextBlock Text="" Grid.Row="3" Grid.Column="0" />
                <Viewbox  Stretch="Uniform" Grid.Row="3" Grid.Column="1">
                    <Ellipse Name="AxisEnStat" Width="80" Height="80" Fill="Gray" Stroke="Blue" StrokeThickness="2"/>
                </Viewbox>
                <Viewbox Stretch="Uniform" Grid.Row="3" Grid.Column="2">
                    <Ellipse Name="AxisInPosStat" Width="80" Height="80" Fill="Gray" Stroke="Blue" StrokeThickness="2"/>
                </Viewbox>

                <TextBlock VerticalAlignment="Center" Text="{DynamicResource TextNowAxisHome}" Grid.Row="4" Grid.Column="0" />
                <TextBlock VerticalAlignment="Center" Text="{DynamicResource TextNowLimit+}" Grid.Row="4" Grid.Column="1" />
                <TextBlock VerticalAlignment="Center" Text="{DynamicResource TextNowLimit-}" Grid.Row="4" Grid.Column="2" />

                <TextBlock VerticalAlignment="Center" Text="{DynamicResource TextNowAxisErr}" Grid.Row="6" Grid.Column="0" />
                <TextBlock VerticalAlignment="Center" Text="{DynamicResource TextNowSwLimit+}" Grid.Row="6" Grid.Column="1" />
                <TextBlock VerticalAlignment="Center" Text="{DynamicResource TextNowSwLimit-}" Grid.Row="6" Grid.Column="2" />

                <Viewbox Stretch="Uniform" Grid.Row="5" Grid.Column="0">
                    <Ellipse Name="AxisHomeStat" Width="80" Height="80" Fill="Gray" Stroke="Blue" StrokeThickness="2"/>
                </Viewbox>
                <Viewbox Stretch="Uniform" Grid.Row="5" Grid.Column="1">
                    <Ellipse Name="AxisLimitStatP" Width="80" Height="80" Fill="Gray" Stroke="Blue" StrokeThickness="2"/>
                </Viewbox>
                <Viewbox Stretch="Uniform" Grid.Row="5" Grid.Column="2">
                    <Ellipse Name="AxisLimitStatN" Width="80" Height="80" Fill="Gray" Stroke="Blue" StrokeThickness="2"/>
                </Viewbox>

                
                <Viewbox Stretch="Uniform" Grid.Row="7" Grid.Column="0">
                    <Ellipse Name="AxisErrStat" Width="80" Height="80" Fill="Gray" Stroke="Blue" StrokeThickness="2"/>
                </Viewbox>
                <Viewbox Stretch="Uniform" Grid.Row="7" Grid.Column="1">
                    <Ellipse Name="AxisSwLimitStatP" Width="80" Height="80" Fill="Gray" Stroke="Blue" StrokeThickness="2"/>
                </Viewbox>
                <Viewbox Stretch="Uniform" Grid.Row="7" Grid.Column="2">
                    <Ellipse Name="AxisSwLimitStatN" Width="80" Height="80" Fill="Gray" Stroke="Blue" StrokeThickness="2"/>
                </Viewbox>


            </Grid>

        </GroupBox>

        <GroupBox Header="{DynamicResource TextAxisControl}" Grid.Column="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 第1行内容 -->
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- 第一列：标签 -->
                        <ColumnDefinition Width="*"/>
                        <!-- 第二列：输入框 -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- 第三列：单位 -->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 第1行 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource TextAxisName}" VerticalAlignment="Center"/>
                    <ComboBox Name="CboxNowAxis" Grid.Row="0" Grid.Column="1" Style="{StaticResource MaterialDesignFilledComboBox}" SelectionChanged="CboxNowAxis_SelectionChanged" />
                    <!-- 第1行没有单位，空着 -->

                    <!-- 第2行 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource TextTargetAxisPos}" VerticalAlignment="Center"/>
                    <TextBox Name="TbTargetPos" Grid.Row="1"   Style="{StaticResource MaterialDesignFloatingHintTextBox}" Grid.Column="1" PreviewTextInput="FloatTextBox_PreviewTextInput" PreviewKeyDown="FloatTextBox_PreviewKeyDown" DataObject.Pasting="FloatTextBox_Pasting" InputMethod.IsInputMethodEnabled="False"/>
                    <TextBlock Grid.Row="1" Grid.Column="2"  Text="mm"  VerticalAlignment="Center"/>

                    <!-- 第3行 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource TextNowAxisVel}" VerticalAlignment="Center"/>
                    <TextBox Name="TbVel" Grid.Row="2" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Grid.Column="1" PreviewTextInput="FloatTextBox_PreviewTextInput" PreviewKeyDown="FloatTextBox_PreviewKeyDown" DataObject.Pasting="FloatTextBox_Pasting" InputMethod.IsInputMethodEnabled="False"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="mm/s" VerticalAlignment="Center"/>

                    <!-- 第4行 -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource TextNowAxisAcc}" VerticalAlignment="Center"/>
                    <TextBox Name="TbAccDec" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Grid.Row="3" Grid.Column="1" PreviewTextInput="FloatTextBox_PreviewTextInput" PreviewKeyDown="FloatTextBox_PreviewKeyDown" DataObject.Pasting="FloatTextBox_Pasting" InputMethod.IsInputMethodEnabled="False"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="mm/s²" VerticalAlignment="Center"/>
                </Grid>
                <!--<StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource TextAxisName}"></TextBlock>
                        <TextBlock Text="{DynamicResource TextTargetAxisPos}"></TextBlock>
                        <TextBlock Text="{DynamicResource TextNowAxisVel}"></TextBlock>
                        <TextBlock Text="{DynamicResource TextNowAxisAcc}"></TextBlock>
                    </StackPanel>
                    <StackPanel >
                        <ComboBox Style="{StaticResource MaterialDesignFilledComboBox}">
                        </ComboBox>
                        <TextBox></TextBox>
                        <TextBox></TextBox>
                        <TextBox></TextBox>

                    </StackPanel>
                    <StackPanel>
                        <TextBlock></TextBlock>
                        <TextBlock>mm</TextBlock>
                        <TextBlock>mm/s</TextBlock>
                        <TextBlock>mm/s^2</TextBlock>
                    </StackPanel>
                </StackPanel>-->

                 <!-- 第2行内容 -->
                <StackPanel  Grid.Row="1">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock VerticalAlignment="Center" Text="{DynamicResource TextNowAxisEnable}"></TextBlock>
                        <ToggleButton Margin="20,0,0,0" Name="IsAxisEnable"
                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                      ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background" Click="ToggleButton_Click" >
                        </ToggleButton>
                    </StackPanel>
                    <Button Margin="5" Name="BtnMove" Style="{StaticResource MaterialDesignRaisedLightButton}"  Content="{DynamicResource TextAxisStart}" Click="BtnMove_Click" ></Button>
                    <Button Margin="5" Name="BtnStop" Style="{StaticResource MaterialDesignRaisedLightButton}"  Content="{DynamicResource TextAxisStop}" Click="BtnStop_Click"></Button>
                </StackPanel>

                <Grid Grid.Row="2" ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 第一行 -->

                    <Button Grid.Row="0"  Grid.Column="1" >
                        <Viewbox>
                        <materialDesign:PackIcon Kind="ArrowUpBoldOutline" />
                        </Viewbox>
                    </Button>


                    <!-- 第二行 -->
                    <Button Grid.Row="1" Grid.Column="0" PreviewMouseDown="JogBackwordButton_MouseDown" PreviewMouseUp="JogBackwordButton_MouseUp">
                        <Viewbox>
                        <materialDesign:PackIcon Kind="ArrowLeftBoldOutline" />
                        </Viewbox>
                    </Button>
                    <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Text="{DynamicResource TextAxisJog}" />
                    <Button Grid.Row="1" Grid.Column="2" PreviewMouseDown="JogForwordButton_MouseDown" PreviewMouseUp="JogForwordButton_MouseUp" >
                        <Viewbox>
                        <materialDesign:PackIcon Kind="ArrowRightBoldOutline"  />
                        </Viewbox>
                    </Button>

                    <!-- 第三行 -->

                    <Button Grid.Row="2" Grid.Column="1" >
                        <Viewbox>
                        <materialDesign:PackIcon Kind="ArrowDownBoldOutline" />
                        </Viewbox>
                    </Button>

                </Grid>


            </Grid>
        </GroupBox>
    </Grid>

</UserControl>
    

